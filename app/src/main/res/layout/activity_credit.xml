<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:guidelineUseRtl="true"
    app:layout_insetEdge="top"
    tools:context=".CreditActivity">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        ​
        <ImageView
            android:id="@+id/credit_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="finishAct"
            android:src="@drawable/before" />
        ​
        <TextView
            android:id="@+id/credit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:text="학점 플래너"
            android:textSize="17sp" />
        ​
        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="저장" />
        ​
    </LinearLayout>
    ​
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">
        ​
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            ​
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="vertical">
                ​
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:orientation="horizontal">
                    ​
                    <TextView
                        android:id="@+id/major"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="전공:" />
                    ​
                    <EditText
                        android:id="@+id/major_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="14sp" />
                    ​
                    <TextView
                        android:id="@+id/general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="일반:" />
                    ​
                    <EditText
                        android:id="@+id/general_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="14sp" />
                    ​
                    <TextView
                        android:id="@+id/culture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="교양:" />
                    ​
                    <EditText
                        android:id="@+id/culture_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="numberSigned"
                        android:maxLength="2"
                        android:textSize="14sp" />
                </LinearLayout>
                ​
            </LinearLayout>
            ​
            <TextView
                android:id="@+id/total_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평가인정 대상 :" />
            ​
            <LinearLayout
                android:id="@+id/linearLayout15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical">
                ​
                <TextView
                    android:id="@+id/total_certificate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="자격증 :" />
                ​
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="123dp">
                    ​
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        ​
                        <EditText
                            android:id="@+id/certificate_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textSize="10sp" />
                        ​
                        <EditText
                            android:id="@+id/certificate_credit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="12sp" />
                    </TableRow>
                    ​
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        ​
                        <EditText
                            android:id="@+id/certificate_name2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textSize="10sp" />
                        ​
                        <EditText
                            android:id="@+id/certificate_credit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="12sp" />
                    </TableRow>
                    ​
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        ​
                        <EditText
                            android:id="@+id/certificate_name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:textSize="10sp" />
                        ​
                        <EditText
                            android:id="@+id/certificate_credit3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>
                ​
            </LinearLayout>
            ​
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:orientation="vertical">
                ​
                <TextView
                    android:id="@+id/self_learn_credit"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="독학사 :"
                    android:maxLength="2"/>
                ​
                <EditText
                    android:id="@+id/final_total_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="3"
                    android:text="총점 :" />
                ​
            </LinearLayout>
            ​
            <TextView
                android:id="@+id/planner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="플래너" />
            ​
        </LinearLayout>
    </ScrollView>
    ​
</androidx.constraintlayout.widget.ConstraintLayout>
